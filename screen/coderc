# ===============================================================
# Coding Screen
# ===============================================================
#
# This is config I used to start and coding related screens.
#

screen -t background 6
stuff "cd $SCREENPWD\012"
stuff "clear\012"

screen -t database 5
stuff "cd $SCREENPWD\012"
stuff "clear\012"

screen -t logs 4
stuff "cd $SCREENPWD\012"
stuff "tail -f log/development.log\012"

screen -t console 3
stuff "cd $SCREENPWD\012"
stuff "clear\012"
stuff "console\012"

screen -t tests 2
stuff "cd $SCREENPWD\012"
stuff "clear\012"

screen -t gaurd 1
stuff "cd $SCREENPWD\012"
stuff "clear\012"
stuff "guard\012"

screen -t bash 0
stuff "cd $SCREENPWD\012"
stuff "clear\012"

altscreen on
